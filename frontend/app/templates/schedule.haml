#schedule-manager
  .button-bar
    .room-list-section
      %button#show-room.btn.btn-warning{ng-repeat:"room in rooms", ng-click:"room.show = !room.show"}
        %i.fa.fa-eye-slash.fa-fw{ng-show:"!room.show"}
        %i.fa.fa-eye.fa-fw{ng-show:"room.show"}
        {{room.name}}
        %i.fa.fa-times.del-room{ng-click:"removeRoom(room)"}

      .alert.alert-info{ng-hide:"rooms.length"} <b>HINT</b>: Add a room to drag and drop talks into at the right.

    .add-room-section
      %form.form-inline{role:"form"}
        .form-group
          %label.sr-only{for:"room-name"} Room Name
          %input#room-name.form-control{type:"text", placeholder:"Independence Hall", ng-model:"new_room_name"}

        %button#add-room.btn.btn-warning{ng-click:"addRoom()"}
          %i.fa.fa-plus.fa-fw
          Add Room

  .schedule-area
    .card-panel
      .card-column
        %h2 Unscheduled
        .cardlist
          .card{class:"min{{card.length}}", ng-repeat:"card in unscheduled"}
            %h4
              {{card.title}}
              .pull-right {{card.rating}}
            %p {{card.abstract}}

    .time-guides
      .guide 8am
      .guide 9am
      .guide 10am
      .guide 11am
      .guide 12pm
      .guide 1pm
      .guide 2pm
      .guide 3pm
      .guide 4pm
      .guide 5pm
      .guide 6pm
      .guide 7pm

    .card-wall
      .card-column{ng-repeat:"room in rooms", ng-show:"room.show"}
        %h2 {{room.name}}
        .cardlist
          .card{class:"min{{card.length}}", ng-repeat:"card in room.talks"}
            %h4
              {{card.title}}
              .pull-right {{card.rating}}
            %p {{card.abstract}}
